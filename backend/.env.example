# =============================================================================
# Voice Lab Backend - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# =============================================================================

# Application
APP_NAME="Voice Lab"
APP_ENV=development  # development, staging, production
DEBUG=true
API_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/voicelab

# Redis
REDIS_URL=redis://localhost:6379/0

# Storage
STORAGE_TYPE=local  # local, s3, gcs
STORAGE_PATH=./storage

# AWS S3 (if STORAGE_TYPE=s3)
S3_BUCKET=
S3_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# =============================================================================
# Voice Providers
# =============================================================================

# Google Cloud
# Download service account key from GCP Console and set path
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GCP_PROJECT_ID=your-project-id

# Azure Speech Services
# Get from Azure Portal > Cognitive Services > Speech
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=eastasia

# ElevenLabs
# Get from https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=

# VoAI (if applicable)
VOAI_API_KEY=
VOAI_API_ENDPOINT=

# =============================================================================
# LLM Providers
# =============================================================================

# Anthropic (Claude)
# Get from https://console.anthropic.com/
ANTHROPIC_API_KEY=

# OpenAI
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=

# =============================================================================
# CORS
# =============================================================================

# Comma-separated list of allowed origins
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]
