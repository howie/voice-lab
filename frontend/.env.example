# =============================================================================
# Voice Lab Frontend - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# Variables must be prefixed with VITE_ to be exposed to the app
# =============================================================================

# API Base URL (defaults to /api/v1 with proxy in dev mode)
VITE_API_BASE_URL=/api/v1

# Optional: Direct API URL for production
# VITE_API_BASE_URL=https://api.voicelab.example.com/api/v1

# Development Mode: Disable Authentication
# IMPORTANT: Set to true ONLY for local development to skip Google SSO
# NEVER set to true in production!
VITE_DISABLE_AUTH=true
